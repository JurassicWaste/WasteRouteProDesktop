{
  "name": "wasteroutepro-desktop-min",
  "version": "1.0.0",
  "description": "Minimal Electron desktop wrapper for exeterwasteremoval.co.uk",
  "main": "main.js",
  "author": "You",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "uk.co.exeterwasteremoval.desktop",
    "productName": "WasteRoute Pro",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "README.md"
    ],
    "asar": true,
    "win": {
      "target": ["nsis"],
      "artifactName": "WasteRoutePro-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
